{
  "name": "expenses-control",
  "version": "1.0.0",
  "description": "A application to help you track your expenses and export them to a worksheet",
  "main": "./build/server.js",
  "scripts": {
    "build": "tsc",
    "dev": "npm-run-all -p watch watch-server",
