{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "target": "es6",
        "outDir": "./build",
        "baseUrl": "./",
        "typeRoots": ["./node_modules/@types"],
        "types": ["node"],
    },
    "include": [
        "src/**/*.ts",
        "src/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "buildOnSave": true,
    "compileOnSave": true
}